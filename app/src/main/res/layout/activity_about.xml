<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <include
        android:id="@+id/toolbartrack"
        layout="@layout/toolbar_track">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="371dp"
                android:src="@drawable/rutefarver"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/about_appinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_info"
                android:textSize="8pt"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/about_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:drawableStart="@drawable/ic_star_black_24dp"
                android:text="@string/feedback"
                android:textSize="10pt"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:onClick="AboutRateOnClick"
                />

            <TextView
                android:id="@+id/about_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_feedback_black_24dp"
                android:text="@string/rapporter_fejl"
                android:textAlignment="textStart"
                android:textSize="10pt"
                android:textStyle="bold"
                android:onClick="AboutFeedBackOnClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>