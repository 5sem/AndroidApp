<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbartrack"
        layout="@layout/toolbar_track" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="7dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/profilepicture" />
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Profiltekst"
        android:textStyle="bold"
        android:textSize="20dp"/>

<TextView
    android:layout_marginLeft="7dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Brugernavn:"/>
    <EditText
        android:layout_marginLeft="7dp"
        android:id="@+id/profilEditTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beskrivelse"/>
        <EditText
            android:layout_margin="7dp"
            android:layout_height="165dp"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:gravity="start"
            android:id="@+id/profile_profiletext_edittext"
            android:maxLength="200"
            />


<Switch
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Privat profil"
    android:id="@+id/profilePrivacySwitch"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="GEM"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="end"
        android:onClick="profileBtnSave"/>




</LinearLayout>
    </ScrollView>


</LinearLayout>