<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:text="Brugernavn:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/profilEditTextUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Dit brugernavn"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@null"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:text="Privat profil"
            android:textSize="20dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profilePrivacySwitch"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <EditText

        android:layout_margin="7dp"
        android:layout_height="165dp"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:gravity="start"
        android:id="@+id/profile_profiletext_edittext"
        android:maxLength="200"
        android:background="@color/white"
        android:hint="Profiletekst"
        />

    <Button
        android:id="@+id/ProfileBtnOpret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gem"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="end"
        android:onClick="profileBtnSave"/>

</LinearLayout>
