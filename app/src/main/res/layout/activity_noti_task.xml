<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spaendhjelmen.Task.NotiTaskActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbartrack"
            layout="@layout/toolbar_track" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_warning_yellow_24dp" />
        <TextView
            android:layout_margin="15dp"
            android:layout_marginTop="25dp"
            android:textSize="17dp"
            android:text="Denne meddelelse får du fordi du ikke har bevæget dig, ud fra dine indstillinger i GPS secure.
Tryk derfor på 'JEG ER OKAY' for at bekræfte du okay
Bekræfter du at du er okay vil en sms ikke blive sendt og du kan fortsætte din kørsel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="StopalertClick"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:text="jeg er okay"
            android:layout_width="150dp"
            android:layout_height="100dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>